@model Wagebat.ViewModels.Users.InstructorCourseInput
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-bookmarks icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                <div class="page-title-subheading">

                </div>
            </div>
        </div>
        <div class="page-title-actions">

            @*<div class="d-inline-block">
                <p>
                    <a asp-action="AllInstructorsIndex" asp-controller="Subscriptions" class="btn btn-primary">Back to List</a>
                </p>
            </div>*@
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-6" style="margin: 6px auto;">

        <div class="card">
            <div class="body">
                <form asp-action="CreateCourse" asp-controller="Administration" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div style="margin-top:25px" class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Chose Instructor Courses</label>
                            <select required asp-for="CoursesIds" class="form-control" asp-items="ViewBag.Courses">

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="text-align: center;">
                            <input type="submit" value="Add" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}













