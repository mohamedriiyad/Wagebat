@model Wagebat.ViewModels.Users.InstructorCourseInput
@{
    Layout = "_LoginLayout";
}

<div class="row clearfix">
    <div class="col-lg-6" style="margin: 6px auto;">

        <div class="card" style="margin-top: 160px">
            <div class="body">
                <form method="post" asp-action="CreateCourse" id="reg_form" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="login-form" style="width: 60%; margin-top: 250px;">

                        <h2>Chose Your Courses</h2>

                        <div class="form-group">
                            <div class="form-input">
                                <select class="form-select" style="display: block; height: 94px; border: double;" asp-for="CoursesIds" asp-items="ViewBag.Courses">
                                    <option selected disabled value="0">Select Your Courses</option>
                                </select>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-input margin-top-20 clearfix">
                            <input style="margin: 0px auto; display: block; background-color: #4373e7; border: double; " type="submit" class="btn btn-primary" value="Select">
                        </div>
                        <a asp-action="Index" asp-controller="Home" class="registration">Back to the home page.</a>
                    </div>

                </form>
            </div>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </div>
    </div>
</div>
