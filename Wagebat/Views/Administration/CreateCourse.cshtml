@model Wagebat.ViewModels.Users.InstructorCourseInput
@{
    Layout = "_LoginLayout";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-add-user icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                Add Courses to Instructor
                <div class="page-title-subheading">

                </div>
            </div>
        </div>
        <div class="page-title-actions">

            <div class="d-inline-block">
                <p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-primary">Back to List</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-6" style="margin: 6px auto;">

        <div class="card">
            <div class="body">
                <form method="post" id="reg_form" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">

                        <div class="col-md-12">
                            <label for="name">Course</label>
                            <select asp-for="CoursesIds" class="form-control" asp-items="ViewBag.Courses">
                                <option value="0">Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-input margin-top-20 clearfix">
                        <input style="margin: 10px auto; display: block;" type="submit" class="btn btn-primary" value="Create">
                    </div>
                </form>
            </div>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </div>
    </div>
</div>
