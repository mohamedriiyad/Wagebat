<div class="section">
    <div class="container">
        <div class="row">
            @model Wagebat.ViewModels.Users.UserVM

            @{
                ViewData["Title"] = "Details";
                Layout = "_AdminLayout";
            }
            <div class="login-box-lg">
                <div class="heading centered padding-vertical-20">
                    <i class="fa fa-info-circle tbl main-color"></i>
                    <h3 class="uppercase head-4 bold">Details</h3>
                </div>
                <form method="post" id="reg_form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-input">
                        <label>@Html.DisplayNameFor(model => model.UserName)<span class="red"></span></label>
                        <input readonly="readonly" placeholder="@Model.UserName" class="form-control shape">
                    </div>
                    <div class="form-input">
                        <label>@Html.DisplayNameFor(model => model.Email)<span class="red"></span></label>
                        <input readonly="readonly" placeholder="@Model.Email" class="form-control shape">
                    </div>
                    <div class="form-input">
                        <label>@Html.DisplayNameFor(model => model.PhoneNumber)<span class="red"></span></label>
                        <input readonly="readonly" placeholder="@Model.PhoneNumber" class="form-control shape">
                    </div>
                    <div class="form-input">
                        <label>@Html.DisplayNameFor(model => model.University)<span class="red"></span></label>
                        <input readonly="readonly" placeholder="@Model.University" class="form-control shape">
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-input margin-top-20 clearfix" style=" display: flex;">
                        <a asp-area="Identity" asp-page="/Account/ResetPassword" class="btn btn-lg main-bg btn-block shape">Edit</a> |
                        <a asp-action="Index" class="btn btn-lg main-bg btn-block shape">Back to List</a>
                    </div>
                </form>
            </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }

        </div>
    </div>
</div>


