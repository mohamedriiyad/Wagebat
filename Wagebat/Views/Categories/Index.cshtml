@model IEnumerable<Wagebat.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-users icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                All Categories
                <div class="page-title-subheading">

                </div>
            </div>
        </div>
        <div class="page-title-actions">

            <div class="d-inline-block">
                <p>
                    <a href="@Url.Action("Create", "Categories")" class="btn btn-primary">
                        Create &nbsp; <i class="pe-7s-add-user"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12">

        <div class="card">
            <div class="body">

                <div class="table-responsive">
                    <input type="hidden" id="orderId" />
                    <table class=" mb-0 table table-bordered col-lg-12" style="text-align: center">
                        <tr>
                            <th>__________</th>
                            <th>
                                Name
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="font-size: 20px;">
                                    <a style="color: #afafaa;" data-toggle="tooltip" data-placement="left" title="Edit" href="@Url.Action("Edit", "Categories", new { id = item.Id})"><i title="Edit" class="pe-7s-pen"></i></a>

                                    <a href="#" style="color:red;" data-placement="left" data-toggle="modal" data-target=".bd-example-modal-sm" title="Delete" onclick="confirm('@item.Id')"><i class="pe-7s-trash"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                            </tr>
                        }
                    </table>

                </div>

            </div>
        </div>

    </div><!-- #content end -->
</div>

<!--Modal-->
<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="margin-top: 77px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="deleteOrder()">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var confirm = function (id) {
            $("#orderId").val(id);
        }

        var deleteOrder = function () {
            var _id = $("#orderId").val();
            $.ajax({
                type: "POST",
                url: "/Categories/DeleteConfirmed",
                data: { id: _id },
                success: function (result) {
                    if (result) {
                        $("#deleteModal").fadeOut(500);
                        $("#orderId").val(null);
                        window.location.href = "/Categories/Index";
                    } else {
                        alert("Something went wrong while processing your request.");
                    }
                }
            });
        }

        var cancel = function () {
            $("#deleteModal").fadeOut(500);
        }
    </script>

}






























